# Quest Board 環境変数設定
# このファイルを.envにコピーして、実際の値を設定してください

# 環境設定
NODE_ENV=development

# サーバー設定
PORT=3001
FRONTEND_URL=http://localhost:3000

# データベース設定
DB_HOST=localhost
DB_PORT=5432
DB_USER=questboard_user
DB_PASSWORD=your-secure-database-password
DB_NAME=questboard

# Redis設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# JWT設定
JWT_SECRET=your-very-secure-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-very-secure-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth設定
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 管理者設定
ADMIN_EMAILS=admin@example.com,admin2@example.com

# セッション設定
SESSION_SECRET=your-very-secure-session-secret
SESSION_NAME=questboard_session
SESSION_MAX_AGE=86400000

# Elasticsearch設定
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# メール設定
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@questboard.com

# Sentry設定（エラートラッキング）
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ログ設定
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# セキュリティ設定
BCRYPT_ROUNDS=12
CORS_MAX_AGE=86400
HELMET_CSP_ENABLED=true

# 2FA設定
TWO_FA_APP_NAME=QuestBoard
TWO_FA_TOKEN_PERIOD=30
TWO_FA_WINDOW=1

# パフォーマンス設定
MAX_UPLOAD_SIZE=10485760
REQUEST_TIMEOUT=30000
SOCKET_TIMEOUT=60000

# 監視設定
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# バックアップ設定
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=questboard-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# 通知設定
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK
NOTIFICATION_EMAIL=notifications@questboard.com

# 機能フラグ
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FA=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_WEBSOCKET=true
FEATURE_SEARCH=true
FEATURE_RATINGS=true

# 開発用設定
DEBUG=false
VERBOSE_LOGGING=false
MOCK_AUTH=false