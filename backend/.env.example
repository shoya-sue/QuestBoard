# ポート番号
PORT=3001

# JWT秘密鍵（本番環境では必ず変更してください）
JWT_SECRET=your-secret-key-change-this-in-production

# Google OAuth設定
# Google Cloud Consoleで取得したクライアントID
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com

# 管理者メールアドレス（カンマ区切りで複数指定可能）
ADMIN_EMAILS=admin@example.com,admin2@example.com

# Node環境
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=questboard_user
DB_PASSWORD=your_secure_password_here
DB_NAME=questboard

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Sentry Configuration (Optional)
# SentryのDSNはhttps://sentry.io/から取得
SENTRY_DSN=

# Email Configuration (for future use)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@questboard.com

# Elasticsearch Configuration (for future use)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=